<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:contentDescription="@string/todo"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/angelo"
        tools:srcCompat="@drawable/angelo" />

    <TextView
        android:id="@+id/cityN"
        android:layout_width="277dp"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="@string/enter_city_name"
        android:textAlignment="center"
        android:textColor="@color/whiteC"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Cname"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="104dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/please_enter_the_city"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/whiteC"
        android:textSize="30sp"
        android:textStyle="italic"
        tools:targetApi="o" />

    <Button
        android:id="@+id/button"
        android:layout_width="252dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="172dp"
        android:onClick="FindWeather"
        android:text="@string/what_s_the_weather"
        android:textColor="@color/whiteC"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/Rname"
        android:layout_width="340dp"
        android:layout_height="69dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="175dp"
        android:textAlignment="center"
        android:textColor="@color/whiteC"
        android:textSize="24sp" />

</RelativeLayout>